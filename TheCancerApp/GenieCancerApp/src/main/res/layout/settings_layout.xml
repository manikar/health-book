<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingTop="20px"
        android:layout_marginLeft="10px"
        >
        <TableRow android:paddingTop="5px">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appointment Reminder" />
            <Switch
                android:id="@+id/appointmentReminderSwitch"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/SwitchCompatTheme"/>
        </TableRow>
        <TableRow android:paddingTop="20px">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medicine Reminder" />
            <Switch
                android:id="@+id/medicineReminderSwitch"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/SwitchCompatTheme"/>
        </TableRow>
    </TableLayout>

</LinearLayout>